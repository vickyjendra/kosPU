<hr />
<div class="row">
    <div class="col-sm-8">
        <div class="card">

            <div class="card-body">
                <center>
                    <h1>
                        @foreach (var item in Model)
                        {
                            <p class="font-weight-bold">@item.kost_name</p>
                        }


                    </h1>
                </center>
            </div>
        </div>

        <hr />
        <br />
        <div class="row">
            <div class="col-sm">Mix</div>
            <div class="col-sm">
                @*<img src="~/additional-file/images/location.png" width="30" />*@
                @*100m from President University*@
            </div>
        </div>
        <br />

        <div class="row">
            <div class="col-sm">
                @*Available 1 Room*@
            </div>
            <div class="col-sm">

            </div>
            <div class="col-sm">

            </div>
            <div class="col-sm">
                @*<input type="submit" class="form-group btn btn-primary" value="Save" />*@
            </div>
        </div>


        <hr />
        <h2>
            <p class="font-weight-bold">
                What You Get
            </p>
        </h2>
        <div class="row">
            @foreach (var item in Model)
            {
                if (item.ben_free == "Yes")
                {
                    <div class="col">
                        <img src="~/additional-file/images/free.png" width="30" />
                        Free Admin & Cleaning Fees
                    </div>
                }

            }



        </div>
        <br />
        <div class="row">
            @foreach (var item in Model)
            {
                if (item.ben_keep == "Yes")
                {
                    <div class="col">
                        <img src="~/additional-file/images/policeman.png" width="30" />
                        House keeper
                    </div>
                }

            }




        </div>
        <hr />
        <h2>
            <p class="font-weight-bold">
                Room Specifications
            </p>
        </h2>
        @foreach (var item in Model)
        {
            if (item.spek_size == "3x4")
            {
                <div class="row">
                    <div class="col">
                        <img src="~/additional-file/images/size.png" width="30" />
                        3 x 4 Meter
                    </div>
                </div>
            }
            if (item.spek_size == "4x4")
            {
                <div class="row">
                    <div class="col">
                        <img src="~/additional-file/images/size.png" width="30" />
                        4 x 4 Meter
                    </div>
                </div>
            }

        }

        <br />
        @foreach (var item in Model)
        {
            if (item.spek_bath == "In the room")
            {
                <div class="row">
                    <div class="col">
                        <img src="~/additional-file/images/bathtub.png" width="30" />
                        Bathroom Inside
                    </div>
                </div>
            }
            if (item.spek_bath == "Out the Room")
            {
                <div class="row">
                    <div class="col">
                        <img src="~/additional-file/images/bathtub.png" width="30" />
                        Bathroom Outside
                    </div>
                </div>
            }
        }

        <hr />
        <h2>
            <p class="font-weight-bold">
                Facility
            </p>
        </h2>
        <div class="row">
            @foreach (var item in Model)
            {
                if (item.AC == "Yes")
                {
                    <div class="col-sm">
                        <img src="~/additional-file/images/air-conditioner.png" width="30" />
                        AC
                    </div>
                }

            }

            @foreach (var item in Model)
            {
                if (item.BED == "Yes")
                {
                    <div class="col-sm">
                        <img src="~/additional-file/images/double-bed.png" width="30" />
                        Mattress
                    </div>
                }
            }
            @foreach (var item in Model)
            {
                if (item.wifi == "Yes")
                {
                    <div class="col-sm">
                        <img src="~/additional-file/images/wifi-router.png" width="30" />
                        WIFI
                    </div>
                }
            }

        </div>
        <br />



        <div class="row">
            @foreach (var item in Model)
            {
                if (item.cupboard == "Yes")
                {
                    <div class="col-sm">
                        <img src="~/additional-file/images/wardrobe.png" width="30" />
                        Cupboard
                    </div>
                }
            }
            @foreach (var item in Model)
            {
                if (item.tabble == "Yes")
                {
                    <div class="col">
                        <img src="~/additional-file/images/table.png" width="30" />
                        Study desk
                    </div>
                }
            }
            @foreach (var item in Model)
            {
                if (item.chair == "Yes")
                {
                    <div class="col">
                        <img src="~/additional-file/images/table.png" width="30" />
                        Chair
                    </div>
                }
            }

        </div>


        <br />
        <div class="row">
            @foreach (var item in Model)
            {
                if (item.washing == "Yes")
                {
                    <div class="col-sm">
                        <img src="~/additional-file/images/washing-machine.png" width="30" />
                        washing machine
                    </div>
                }
            }
            @foreach (var item in Model)
            {
                if (item.regni == "Yes")
                {
                    <div class="col-sm">
                        <img src="~/additional-file/images/refrigerator.png" width="30" />
                        REFRIGERATOR
                    </div>
                }

            }
            @foreach (var item in Model)
            {
                if (item.TV == "Yes")
                {
                    <div class="col-sm">
                        <img src="~/additional-file/images/tv.png" width="30" />
                        TV
                    </div>
                }
            }

        </div>

    </div>

    <div class="col-sm-4">

        <div class="card" style="width: 25rem;">

            <div class="card-body">
                <center>

                    @foreach (var item in Model)
                    {
                        if (item.START != null)
                        {
                            <div class="row">
                                <div class="col-sm-6">
                                    <label>Floor</label><br />
                                    <input type="text" class="form-control" name="birthdaytime" placeholder="Start" value="@item.FLOOR" readonly>

                                </div>
                                <div class="col-sm-6">
                                    <label>Room</label><br />
                                    <input type="text" class="form-control" name="birthdaytime" placeholder="Start" value="@item.NUMBER_ROOM" readonly>

                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-6">
                                    <label>Start</label><br />
                                    <input type="text" class="form-control" name="birthdaytime" placeholder="Start" value="@item.START.Value.ToShortDateString()" readonly>

                                </div>
                                <div class="col-sm-6">
                                    <label>Periode</label><br />
                                    <input type="text" class="form-control" name="birthdaytime" placeholder="Start" value="@item.periode /Month" readonly>

                                </div>
                            </div>
                        }

                    }

                </center>
            </div>
        </div>
        <br />
        <div class="card" style="width: 25rem;">

            @*<img class="card-img-top" src="~/additional-file/images/FRM09_01.jpg"  alt="Card image cap">*@
            <div class="card-body">


                @foreach (var item in Model)
                {
                    if (item.kost_price != 0)
                    {
                <center>
                    <div class="row">
                        <div class="col-sm-6">

                            <label>Price</label><br />
                            <input type="text" class="form-control" name="birthdaytime" placeholder="Start" value="@item.kost_price /Month" readonly>

                        </div>

                    </div>
                </center>
                        }

                    }
                
            </div>
        </div>
    </div>
</div>

